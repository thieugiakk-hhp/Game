<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/backgroundtest"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize">

                <TextView
                    android:id="@+id/txtScore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="Score : 300"
                    android:textColor="@android:color/white"
                    android:textSize="24sp"
                    android:textStyle="bold" />

            </RelativeLayout>

            <FrameLayout
                android:id="@+id/frame"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/pet"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/copy_221858306"/>

                <ImageView
                    android:id="@+id/no1"
                    android:layout_width="30.00dp"
                    android:layout_height="30.00dp"
                    android:src="@drawable/fish"/>

                <ImageView
                    android:id="@+id/imgVc1"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:src="@drawable/dolphin"/>

                <ImageView
                    android:id="@+id/imgVc2"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="@drawable/octopus"/>

                <ImageView
                    android:id="@+id/imgVc3"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:src="@drawable/turtle"/>

                <ImageView
                    android:id="@+id/imgVc4"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/whale"/>

                <ImageView
                    android:id="@+id/no2"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/shark"/>

                <ImageView
                    android:id="@+id/star"
                    android:layout_width="20.00dp"
                    android:layout_height="20.00dp"
                    android:src="@drawable/ocean"/>

                <TextView
                    android:id="@+id/txtStart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Tab to Start"
                    android:textColor="@android:color/white"
                    android:textSize="24sp"
                    android:textStyle="bold" />


            </FrameLayout>

        </LinearLayout>

    </RelativeLayout>
</layout>