<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_start_activity"
    tools:context=".StartActivity">

    <Button
        android:id="@+id/btnPlayGame"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/button_play_start_menu_activity"
        android:onClick="btnPlayGameOnClick"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.385"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/btnCharacter"
        android:layout_width="170dp"
        android:layout_height="85dp"
        android:text="Dowsieeeee"
        android:textSize="18sp"
        android:visibility="invisible"
        android:background="@drawable/frame_pet_name"
        android:fontFamily="@font/icieleffra_regular"
        app:layout_constraintBottom_toBottomOf="@+id/btnPlayGame"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btnPlayGame" />

    <EditText
        android:id="@+id/edtName"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:maxLength="10"
        android:maxLines="1"
        android:hint="Đặt tui cái tên đi.."
        android:visibility="invisible"
        android:textSize="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/btnCharacter"
        app:layout_constraintStart_toStartOf="@+id/btnCharacter"
        app:layout_constraintTop_toTopOf="@+id/btnCharacter" />

    <Button
        android:id="@+id/btnOK"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="ok"
        android:textSize="10dp"
        android:visibility="invisible"
        android:fontFamily="@font/icielbrandontext_bold"
        app:layout_constraintBottom_toBottomOf="@+id/edtName"
        app:layout_constraintEnd_toEndOf="@+id/btnCharacter"
        app:layout_constraintStart_toEndOf="@+id/edtName"
        app:layout_constraintTop_toTopOf="@+id/edtName" />

    <TextView
        android:id="@+id/tvNoti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sai quy tắc đặt tên"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="@+id/btnCharacter"
        app:layout_constraintTop_toBottomOf="@+id/btnPlayGame" />

</androidx.constraintlayout.widget.ConstraintLayout>